{
  "name": "next-maintenance",
  "version": "3.0.0",
  "description": "Newtelco Maintenance App",
  "scripts": {
    "dev": "NEXT_PUBLIC_ENV=development next -p 4000",
    "ci": "NEXT_PUBLIC_ENV=CI next start -p 4000",
    "start": "NEXT_PUBLIC_ENV=production next start -p 4000",
    "build": "next build",
    "lint": "next lint",
    "prettier": "prettier --check \"src/**/*.{js,jsx,json}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx,json}\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:ci": "cypress run --record"
  },
  "keywords": [
    "nextjs",
    "react",
    "smtp",
    "google-apis",
    "network-maintenance"
  ],
  "author": "Nico Domino <ndomino@newtelco.de>",
  "homepage": "https://github.com/newtelco/next-maintenance",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newtelco/next-maintenance.git"
  },
  "bugs": {
    "url": "https://github.com/newtelco/next-maintenance/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@nivo/bar": "^0.73.1",
    "@nivo/calendar": "^0.73.0",
    "@sentry/nextjs": "^6.10.0",
    "@tinymce/tinymce-react": "^3.6.0",
    "algolia-react-autocomplete": "^1.0.5",
    "algoliasearch": "^4.4.0",
    "apexcharts": "^3.20.0",
    "date-fns": "^2.15.0",
    "dompurify": "^2.2.8",
    "file-saver": "^2.0.2",
    "formik": "^2.1.5",
    "just-debounce-it": "^1.1.0",
    "lodash.isarray": "^4.0.0",
    "lodash.isequal": "^4.5.0",
    "lodash.isobject": "^3.0.2",
    "lodash.transform": "^4.6.0",
    "logrocket": "^1.1.0",
    "logrocket-react": "^4.0.1",
    "moment-timezone": "^0.5.31",
    "next": "^11.1.0",
    "next-auth": "^3.27.3",
    "react": "^17.0.1",
    "react-apexcharts": "^1.3.7",
    "react-dom": "^17.0.1",
    "react-excel-renderer": "^1.1.0",
    "react-flatpickr": "^3.10.4",
    "react-pdf": "^5.2.0",
    "react-rnd": "^10.2.1",
    "react-select": "^3.1.0",
    "react-useanimations": "^2.0.5",
    "serverless-mysql": "^1.5.4",
    "sql-template-strings": "^2.2.2",
    "swr": "^0.3.0",
    "webfontloader": "^1.6.28",
    "zustand": "^3.5.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/cypress": "^6.0.0",
    "ag-grid-community": "^25.3.0",
    "ag-grid-react": "^25.3.0",
    "css-loader": "^6.2.0",
    "cypress": "^6.6.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "less": "^4.1.1",
    "less-loader": "^10.0.1",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^2.2.0",
    "prettier": "^2.0.5",
    "rsuite": "^4.10.2",
    "simple-git-hooks": "^2.5.1"
  },
  "prettier": {
    "semi": false
  },
  "eslintConfig": {
    "rules": {
      "no-irregular-whitespace": 0,
      "react/prop-types": 0,
      "@next/next/no-img-element": 0,
      "import/no-anonymous-default-export": 0
    },
    "extends": [
      "eslint:recommended",
      "next",
      "prettier"
    ],
    "globals": {
      "require": "readonly",
      "module": "readonly",
      "process": "readonly",
      "fetch": "readonly",
      "useEffect": "readonly",
      "Set": "readonly",
      "Symbol": "readonly",
      "setTimeout": "readonly",
      "navigator": "readonly",
      "window": "readonly",
      "document": "readonly",
      "atob": "readonly",
      "ArrayBuffer": "readonly",
      "Uint8Array": "readonly",
      "Blob": "readonly",
      "exports": "writable",
      "console": "readonly"
    }
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit \"$1\"",
    "pre-commit": "npx --no-install lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,html,css}": [
      "npm run prettier:fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
